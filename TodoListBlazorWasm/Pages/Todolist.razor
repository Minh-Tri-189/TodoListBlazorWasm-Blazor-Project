@page "/todoList"
@using System.Globalization
@using TodoListBlazorWasm.Component
@using global::TodoList.API.Enums
@inject IConfiguration Configuration
<h3>TodoList</h3>

@if (Tasks == null || Assignee == null)
{
    <LoadingIndicator></LoadingIndicator>
}
else
{
    <div class="row">
        <!-- Form tìm kiếm -->
        <EditForm Model="@TaskListSearch" OnSubmit=@SearchForm>
            <div class="row">
                <!-- Trường nhập tên công việc -->
                <div class="col">
                    <label for="name">Name</label>
                    <InputText class="form-control" id="name" @bind-Value="TaskListSearch.NameType"></InputText>
                </div>

                <!-- Lựa chọn người được giao việc -->
                <div class="col">
                    <label for="assignee">Assignee</label>
                    <InputSelect class="form-control" id="assignee" @bind-Value="TaskListSearch.AssigneeId">
                        <option>Select Assignee</option>
                        @foreach (var assignee in Assignee)
                        {
                            <option value="@assignee.Id">@assignee.FullName</option>
                        }
                    </InputSelect>
                </div>

                <!-- Lựa chọn mức độ ưu tiên -->
                <div class="col">
                    <label for="priority">Priority</label>
                    
                    <InputSelect class="form-control" id="priority" @bind-Value="TaskListSearch.Priority">
                        <option>Select Priority</option>
                        @foreach (string item in Enum.GetNames(typeof(Priority)))
                        {
                            <option value="@item">@item</option>
                        }
                    </InputSelect>
                </div>

                <!-- Nút tìm kiếm -->
                <div class="col pt-4">
                    <button type="submit" class="btn btn-success">Search</button>
                </div>
                <div class="col pt-4">
                    <a href="/taskCreate" class="btn btn-success">Create</a>
                </div>
            </div>
        </EditForm>
    </div>

    <!-- Bảng hiển thị danh sách công việc -->
    <div class="row mt-4">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Priority</th>
                    <th>Assignee</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Tasks)
                {
                    <tr>
                        <td>@item.NameType</td>
                        <td><PriorityLable Priority="@item.Priority"></PriorityLable></td>
                        <td>@item.AssigneeName</td>
                        <td>@item.CreatedDate.ToString(Configuration["DateTimeFormat"])</td>
                        <td><StatusLable Status="item.Status" ></StatusLable></td>
                        <td>
                            <a href="/taskDetails/@item.Id">Detail</a>
                        </td>
                        <td>
                            <a href="/taskEdit/@item.Id">Detail</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
